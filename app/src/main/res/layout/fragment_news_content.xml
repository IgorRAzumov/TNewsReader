<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/srf_fr_news_content_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="@dimen/material_vertical_padding"
    android:paddingStart="@dimen/material_vertical_padding"
    tools:context=".view.fragment.newsContent.NewsContentFragment">

    <ScrollView
        android:id="@+id/sv_fr_news_content_news_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fr_news_content_modify_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/tv_fr_news_content_modify_text_pad_Top"
                android:gravity="end"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textStyle="italic"
                android:text="@string/tv_fr_news_content_modify_text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_fr_news_content_news_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/tv_fr_news_content_news_text_pad_top"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2" />
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>


